<!DOCTYPE html>
<html>
  <head>
    <title>Classified</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <p>
        <%= flash.notice %>
        <%= flash.alert %>
      </p>
      <nav>
        <% if user_signed_in? %>
            <%= button_to translate("menu.logout"), sign_out_sessions_path, method: :delete %>
        <% else %>
            <%= link_to translate("menu.signup"), new_user_path  %>
            <%= link_to translate("menu.signin"), new_session_path  %>
        <% end %>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
