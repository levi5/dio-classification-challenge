<section>
        <% @ads.each do |ad| %>
            <article>
                <button class="more-info">...</button>
                <div class="content-ad-img">
                    <% ad.images.split(",").each do |img| %>
                        <img src="<%= img %>"  />
                    <% end %>
                </div>
                <div class="content-ad-info">
                    <h3><%= ad.title %></h3>
                    <p><%= ad.description %></p>
                    <p>R$ <%= ad.price %></p>
                </div>

            </article>
        <% end %>
</section>